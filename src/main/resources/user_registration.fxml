<GridPane fx:controller="com.java7.practical.project.sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <VBox fx:id="addUserControls">
        <Text text="Create user form"
              GridPane.columnIndex="0" GridPane.rowIndex="0"
              GridPane.columnSpan="4"/>
        <HBox>
            <Label text="UserName:"/>
            <TextField fx:id="user_name"/>
        </HBox>
        <HBox>
            <Label text="First name:"/>
            <TextField fx:id="first_name"/>
        </HBox>
        <HBox>
            <Label text="Last name:"/>
            <TextField fx:id="last_name"/>
        </HBox>
        <HBox>
            <Label text="Address:"/>
            <TextField fx:id="address"/>
        </HBox>
        <HBox>
            <Label text="Email:"/>
            <TextField fx:id="email"/>
        </HBox>
        <HBox>
            <Label text="Date:"/>
            <DatePicker fx:id="birth_date"/>
        </HBox>

        <Button id="addUserBtn" text=" ADD USER "/>
        <Button id="clearFormBtn" text=" CLEAR FORM "/>

    </VBox>
</GridPane>




